generator client {
  provider        = "prisma-client-js"
  output          = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  clerkId      String        @unique
  email        String        @unique
  firstName    String?
  lastName     String?
  imageUrl     String?
  credits      Int           @default(1)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  projects     Project[]
  transactions Transaction[]

  @@index([clerkId])
  @@index([email])
}

model Transaction {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  credits       Int
  amount        Int      // 센트 단위 (e.g. $10 = 1000)
  plan          String   // "starter" | "pro" | "ultra"
  dodoPaymentId String   @unique
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([dodoPaymentId])
}

model Project {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  prompt        String   @db.Text
  name          String?
  files         Json?
  status        String   @default("generating")
  screenshot    String?
  aiModel       String   @default("claude")
  attachedFiles Json?
  templateId    String?
  isPublic      Boolean  @default(false)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  chatMessages  ChatMessage[]

  @@index([userId])
  @@index([status])
  @@index([userId, createdAt(sort: Desc)])
  @@index([isPublic])
}

model ChatMessage {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  role          String
  content       String   @db.Text
  filesChanged  Json?
  aiModel       String?

  createdAt     DateTime @default(now())

  @@index([projectId])
  @@index([createdAt])
}
